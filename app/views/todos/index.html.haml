%section.list_todos
  

  .row
    .col-sm-6.col-sm-offset-3
      = bootstrap_form_for(@todo, {url: todos_path, label_col: "col-sm-3", control_col: "col-sm-6"}) do |f|
        %header
          %h3{:style => "text-align:center;"} Add a new todo
        %fieldset
          = f.text_field :name, label: :Title
          = f.text_area :description, label: :Description, rows: 2
        %fieldset.actions.control-group
          .controls
            %input(type="submit" value="Add Todo" class="btn btn-default")
  .row
    .col-md-4.col-md-offset-4
      %h2{:style => "page_header"} List of Todos
  .row
    .col-md-6.col-md-offset-3
      %ol
        - @todos.each do |todo| 
          %li= todo.name + " (" + todo.tags.map {|t| t.tag}.join(" ") + ") "

  .row
    .col-md-4.col-md-offset-4
